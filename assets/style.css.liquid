html,
  body,
  div,
  span,
  applet,
  object,
  iframe,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  p,
  blockquote,
  pre,
  a,
  abbr,
  acronym,
  address,
  big,
  cite,
  code,
  del,
  dfn,
  em,
  img,
  ins,
  kbd,
  q,
  s,
  samp,
  small,
  strike,
  strong,
  sub,
  sup,
  tt,
  var,
  b,
  u,
  i,
  center,
  dl,
  dt,
  dd,
  ol,
  ul,
  li,
  fieldset,
  form,
  label,
  legend,
  table,
  caption,
  tbody,
  tfoot,
  thead,
  tr,
  th,
  td,
  article,
  aside,
  canvas,
  details,
  embed,
  figure,
  figcaption,
  footer,
  header,
  hgroup,
  menu,
  nav,
  output,
  ruby,
  section,
  summary,
  time,
  mark,
  audio,
  video {
    margin: 0;
    padding: 0;
    border: 0;
    font-size: 100%;
    font: inherit;
    vertical-align: baseline;
  }
  /* HTML5 display-role reset for older browsers */
  article,
  aside,
  details,
  figcaption,
  figure,
  footer,
  header,
  hgroup,
  menu,
  nav,
  section {
    display: block;
  }
  body {
    line-height: 1;
  }
  ol,
  ul {
    list-style: none;
  }
  blockquote,
  q {
    quotes: none;
  }
  blockquote:before,
  blockquote:after,
  q:before,
  q:after {
    content: '';
    content: none;
  }
  table {
    border-collapse: collapse;
    border-spacing: 0;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: 'Manrope';
  }

  body {
    background-color: white;
    font-family: sans-serif;
  }

  .header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    padding: 15px 25px;
    box-sizing: border-box;
    z-index: 1000;
    background: rgba(255, 255, 255, 0.9);
    box-shadow: 0 4px 4px rgba(0, 0, 0, 0.25);
  }

  .header__wrapper {
    display: flex;
    align-items: center;
    gap: 40px;
  }

  .header__logo img {
    width: 90px;
    object-fit: contain;
  }

  .header__nav--main {
    display: flex;
    gap: 30px;
  }

  .header__item {
    font-family: 'Manrope', sans-serif;
    font-size: 1rem;
    color: black;
    font-weight: 500;
    cursor: pointer;
    position: relative;
  }

  .header__item::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 100%;
    height: 1px;
    background-color: black;
    transform: scaleX(0);
    transition: transform 0.6s cubic-bezier(0.25, 1, 0.5, 1);
  }

  .header__item:hover::after {
    transform: scaleX(1);
  }

  .header__item a {
    text-decoration: none;
    color: inherit;
  }

  .header__supernav {
    display: none;
    padding: 25px 0;
  }

  .hero {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 86vh;
    width: 100%;
  }

  .hero__text {
    color: white;
    text-align: center;
  }

  .hero__title {
    font-size: 4.4rem;
    font-weight: 700;
  }

  .hero__subtitle {
    font-size: 1.063rem;
    font-weight: 400;
    margin: 20px 0 40px;
    letter-spacing: 0.03em;
  }

  .hero__link {
    color: white;
    text-decoration: none;
    font-size: 1.25rem;
    font-weight: 400;
    text-transform: uppercase;
    display: inline-block;
  }

  .hero__link::after {
    content: '';
    margin-top: 6px;
    display: block;
    width: 100%;
    height: 3px;
    background-color: white;
    transition: transform 0.6s cubic-bezier(0.25, 1, 0.5, 1);
  }

  .hero__link:hover::after {
    transform: scaleX(0.5);
  }

  .hero__img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(0.7);
    z-index: -1;
  }

  .show {
    display: block !important;
  }

  .home__section {
    width: 90%;
    margin: 76px auto;
  }

  /* any home__sections after the second one give margin 105px 0 */
  .home__section:not(:nth-of-type(2)) {
    margin: 125px auto;
  }

  .headings {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .heading {
    font-size: 2.625rem;
    font-weight: 500;
  }

  .subheading {
    font-size: 1.063rem;
    font-weight: 400;
  }

  .highlighted__products {
    display: flex;
    justify-content: center;
    gap: 25px;
    margin-top: 74px;
  }

  .product--highlighted {
    width: 50%;
    max-width: 840px;
    text-align: center;
    text-decoration: none;
    color: black;
    transition: all 0.6s cubic-bezier(0.25, 1, 0.5, 1);
  }


  .product img {
    object-fit: cover;
    object-position: center;
    border-radius: 3px;
  }

  .productWrapper--highlighted {
    position: relative;
    overflow: hidden;
    border-radius: 3px;
  }

  .product--highlighted img {
    width: 100%;
    max-height: 560px;
    overflow: hidden;
    transform: scale(1);
    transition: all 0.6s cubic-bezier(0.25, 1, 0.5, 1);
  }

  .product h4 {
    font-weight: 600;
  }

  .product--highlighted h4 {
    font-size: 1.65rem;
    margin: 35px 0 25px;
  }

  .product a {
    text-decoration: none;
    color: black;
    font-weight: 600;
  }

  .product--highlighted p {
    position: relative;
    padding-bottom: 7px;
    font-size: 1.085rem;
    display: inline-block;
  }

  .product--highlighted p::after {
    position: absolute;
    content: '';
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: black;
    transition: all 0.6s cubic-bezier(0.25, 1, 0.5, 1);
  }

  .product--imgLink:hover.product--imgLink img {
    transform: scale(1.13);
  }

  .product--paraLink:hover.product--paraLink p::after {
    transform: scaleX(0.5);
  }

  .productRow__wrapper {
    display: flex;
    gap: 30px;
    margin: 60px auto 0;
    width: 100%;
    overflow-x: scroll;
    padding-bottom: 20px;
  }

  .productRow__product {
    flex: 1 0 auto;
    width: min(50%, 360px);
  }

  .productRow__img {
    width: 100%;
    position: relative;
    overflow: hidden;
  }

  .productRow__img::after {
    content: "";
    display: block;
    padding-bottom: 100%;
  }

  .productRow__img img {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    border-radius: 3px;
    transition: all 0.6s cubic-bezier(0.25, 1, 0.5, 1);
    transform: scale(1);
  }

  .productRow__product a {
    text-decoration: none;
    color: black;
  }

  .productRow__product h4 {
    font-size: 1.025rem;
    font-weight: 600;
    margin: 15px 0 10px;
  }

  .productRow__product p {
    font-size: 0.95rem;
    font-weight: 500;
    font-family: 'Manrope', sans-serif;
  }

  .productRow__product:hover .productRow__img img {
    transform: scale(1.13);
  }

  .product {
    width: 100%;
    height: 100vh;
    display: flex;
  }

  .product__imgWrapper {
    position: relative;
    height: 100%;
    width: 50%;
  }

  .product__img {
    height: 100%;
    width: 100%;
    object-fit: cover;
    object-position: center;
  }

  .product__content {
    width: 50%;
  }

  .product__smallImgs {
    display: flex;
    gap: 20px;
    position: absolute;
    bottom: 15px;
    left: 50%;
    transform: translateX(-50%);
  }

  .product__preview {
    filter: brightness(0.7);
    width: 108px;
    height: 60px;
    object-fit: cover;
    object-position: center;
    cursor: pointer;
    border-radius: 3px;
    border: solid 2px transparent;
    transition: all 0.6s cubic-bezier(0.25, 1, 0.5, 1);
  }

  .product__preview:hover {
    filter: brightness(0.9);
    border: solid 2px rgba(75, 84, 97, 0.26);
    box-shadow: 0 5px 4px -3px rgba(0, 0, 0, 0.25);
  }

  .product__content {
    align-self: center;
  }