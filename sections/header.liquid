<header class="header">
  {% comment %} add the logo using the schema setting {% endcomment %}
  <div class="header__wrapper">
    {% if section.settings.logo != blank %}
      <a href="/" class="header__logo">
        <img src="{{ section.settings.logo | img_url: 'master' }}" alt="{{ shop.name }}" />
      </a>
    {% else %}
      <a href="/" class="header__logo">
        {{ shop.name }}
      </a>
    {% endif %}
    <ul class="header__nav header__nav--main">
      <li class="header__item header__item--main">
        <a href="/collections/all" class="header__link">Shop</a>
      </li>
      <li class="header__item header__item--main">
        <span class="header__link header__link--explore">Explore</span>
      </li>
    </ul>
  </div>
  <nav class="header__supernav">
    <ul>
      <li>
        About
        <ul>
          <li><a href="/pages/about">Our Story</a></li>
        </ul>
      </li>
    </ul>
  </nav>
</header>

{% comment %} schema for the logo {% endcomment %}
{% schema %}
  {
    "name": "Logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      }
    ]
  }
{% endschema %}