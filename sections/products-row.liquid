<section class="productRow">
  <div class="headings headings--productRow">
    <h2 class="heading heading--productRow">{{ section.settings.heading }}</h2>
    <h3 class="subheading subheading--productRow">{{ section.settings.subheading }}</h3>
  </div>

  <div class="productRow__wrapper">
    {% for product in section.settings.products %}
      <div class="productRow__product">
        <a href="{{ product.url }}">
          <div class="productRow__img"><img src="{{ product.featured_image | img_url: '500x' }}" alt="{{ product.title | escape }}"></div>
          <h4>{{ product.title }}</h4>
          <p>{{ product.price | money }}</p>
        </a>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
  {
    "name": "Product List",
    "class": "home__section home__section--product-list",
    "settings": [
      {
        "type": "product_list",
        "id": "products",
        "label": "Products",
        "limit": 7
      }, {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Browse Our Collection"
      }, {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "Our favourite products"
      }
    ],

    "presets": [
      {
        "name": "Product List"
      }
    ]
  }
{% endschema %}